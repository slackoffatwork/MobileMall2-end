<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coder.campus.mapper.LoginMapper">

    <resultMap id="BaseResultMap" type="com.coder.campus.pojo.User">
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>



    <sql id="Base_Column_List">
        userId, name, password
    </sql>
    <select id="login" resultType="com.coder.campus.pojo.User">
        SELECT userId, name,password FROM tb_user WHERE name = #{name} AND password = #{password}
    </select>


</mapper>



